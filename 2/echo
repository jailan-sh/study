#include "main.h"

/**
 *
 */

int echo(char argv)
{
	char *id;

	if (strcmp(argv, "$$") == 0)
		id = get_pid()
	else if (strcmp(argv, "$?") == 0)
		id = get_status(status);
	else
		return (0);
}

/**
 */

char *get_pid()
{
	pid_t pid;
	char *id;

	pid = getpid();
	id = convert_num(pid);
	return (id);
}

/**
 */

char *get_status(int n)
{
	char *st;
	st = convert _num(n);
	return (st);
}

/**
 */

char convert_num(int num)
{
	int c = 0, b = num;
	char *ch;
	if (num == 0)
	{
		c = 1;
	}
	else
	{
		while (b != 0)
		{
			b /= 10;
			c++;
		}
	}

	ch = malloc(sizeof(char) * (c + 1));
	if (!ch)
	{
		perror("malloc");
		return (NULL);
	}
	ch[c] = '\0';
	while (c != 0)
	{
		c--;
		ch[c] = '0' + num % 10;
		num /= 10;
	}

	return (ch);
}

